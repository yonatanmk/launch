<div class="teams row">

  <h1> Dunks vs. Starbucks </h1>

  <div class="dunks column small-6">
    <h2>Team Dunks</h2>
    <ul>
      <% dunks_members.each do |member| %>
        <li><%= member.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="starbucks column small-6">
    <h2>Team Starbucks</h2>
    <ul>
      <% starbucks_members.each do |member| %>
        <li><%= member.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="clearfix">
</div>

<div class="add-member">
  <h3>Add Team Member </h3>
  <form action="/teams" method="post">
    <label for="name">Member Name: </label>
    <input type="text" name="name"></br>
    <label for="team">Team:</label>
    <input type="radio" name="team" value="Dunks">Dunks
    <input type="radio" name="team" value="Starbucks">Starbucks</br>
    <label for="hot-iced">Hot or Iced?</label>
    <input type="radio" name="hot-iced" value="hot">Hot
    <input type="radio" name="hot-iced" value="iced">Iced</br>
    <input type="submit" name="submit" id="submit" />
  </form>
</div>
